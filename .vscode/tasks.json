{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üöÄ Launch Session Sniffer",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": ["session_sniffer.py"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "clear": true

            }
        },
        {
            "label": "üîç Run All Quality Checks",
            "type": "shell",
            "command": "powershell.exe",
            "args": ["-ExecutionPolicy", "Bypass", "-File", "${workspaceFolder}/code-quality-checks.ps1"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "üì¶ Install Dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/pip",
            "args": ["install", "-r", "requirements.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "‚ö° Ruff - Fast Python Linter",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/ruff",
            "args": ["check", ".", "--config", "pyproject.toml"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "üî¨ MyPy - Static Type Checker",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/mypy",
            "args": [".", "--config-file", "pyproject.toml"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "üìù Flake8 - Style Guide Enforcer",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/flake8",
            "args": [".", "--config", ".flake8"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "üéØ Pyright - Microsoft Type Checker",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/pyright",
            "args": [".", "--project", "pyproject.toml"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "üßπ Pylint - Code Quality Analyzer",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/pylint",
            "args": [".", "--rcfile", "pyproject.toml"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "üîê Pip Audit - Vulnerability Scanner",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/pip-audit",
            "args": ["--local", "--skip-editable"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "üõ°Ô∏è Safety - Security Vulnerability Check",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/safety",
            "args": ["scan"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "üêç Snyk - Developer Security Platform",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/Activate.ps1; snyk test",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}